{
	"manifest_version": 2,
	"name": "IBM Equal Access Accessibility Checker",
	"description": "A web browser extension for checking accessibility issues",
	"author": "IBM",
	"version": "3.0.0",
    "homepage_url": "https://ibm.com/able",
	"icons": {
        "16": "assets/Bee_Logo@16px.svg",
        "32": "assets/Bee_Logo@32px.svg",
        "64": "assets/Bee_Logo@64px.svg",
        "128": "assets/Bee_Logo@128px.svg"
	},
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
	"permissions": [
        "<all_urls>",
        "tabs",
        "storage",
        "webNavigation"
	],
	"browser_action": {
		"default_title": "IBM Equal Access Accessibility Checker",
		"default_icon": {
            "16": "assets/Bee_Logo@16px.svg",
            "32": "assets/Bee_Logo@32px.svg",
            "48": "assets/Bee_Logo@48px.svg",
            "64": "assets/Bee_Logo@64px.svg",
            "128": "assets/Bee_Logo@128px.svg"
		},
		"default_popup": "popup.html"
	},
	"devtools_page": "devtools.html",
	"background": {
		"scripts": [
			"background.js"
		],
		"persistent": true
	},
	"options_ui": {
		"page": "options.html",
		"open_in_tab": true
	}
}
